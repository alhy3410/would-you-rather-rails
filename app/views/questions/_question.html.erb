<div id="question1_<%= question.id%>">
  <%= question.question1 %>
  <%= question.question1vote %>
  <p><%= link_to "Vote for Question 1", questions_path, :class => "btn btn-default", remote: true %></p>
</div>
<div id="question2_<%= question.id%>">
  <%= question.question2 %>
  <%= question.question2vote %>
  <p><%= link_to "Vote for Question 2", questions_path, :class => "btn btn-default", remote: true %></p>
</div>
<div class="question-actions">
  <%= link_to 'Edit', edit_question_path(question) %> ||
  <%= link_to 'Delete', question_path(question),
                        :data => {:confirm => "Are you sure you want to delete this set of questions?",
                        :method => "Delete"} %>
</div>
<br>
<hr>
