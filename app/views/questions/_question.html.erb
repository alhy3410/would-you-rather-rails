<div id="question_<%= question.id %>">
  <div id="question1_<%= question.id%>">
    <%= question.question1 %>
    <span id ="vote1_<%= question.id %>"><%= question.question1vote %></span>
  </div>
  <div id="question2_<%= question.id%>">
    <%= question.question2 %>
    <span id="vote2_<%= question.id %>"><%= question.question2vote %></span>
  </div>
  <div id="answer_for_question_<%= question.id %>">
    <%= link_to question.question1, question_path(question, selected: 1), method: :patch, remote: true %>
          or
    <%= link_to question.question2, question_path(question, selected: 2), method: :patch, remote: true %>
  </div>
  <div class="question-actions">
    <%= link_to 'Edit', edit_question_path(question) %> ||
    <%= link_to 'Delete', question_path(question),
                          :data => {:confirm => "Are you sure you want to delete this set of questions?",
                          :method => "Delete"} %>
  </div>
  <br>
  <hr>
</div>
